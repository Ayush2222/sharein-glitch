        height: 48vh;
    }
}

@media screen and (max-width: 750px){
    :root{
        --container-width:65vw;

    }
    
    .upload-vector{
        display: none;
    }
    .email-container .field{
        flex-direction: column;
        width: 200px;
    }
    .power{
        bottom: 0px;
        font-size: 13px;
        left:85%;
    }
    #flex-row{
    display: block;
    
    }
    .power{
        left: 60%;
    }
    
